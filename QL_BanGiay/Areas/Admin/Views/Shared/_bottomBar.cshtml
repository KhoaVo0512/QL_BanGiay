@model QL_BanGiay.Areas.Admin.Models.PagerModel
<div class="container m-0 p-0 btn-group" style="background-color:black; border-radius:10px;  height:45px; color:white; max-width: 95%;">

    <div class="col-4 btn-group p-1 m-1">
        <p>
            Hiển thị @Model.StartRecord đến @Model.EndRecord trên @Model.TotalItems Hàng
        </p>
    </div>
    <div class="col-3 btn-group justify-content-end">
        <span class="col-7 mt-2 p-0">
            Hàng trên mỗi trang
        </span>

        <span class="col-5 p-1">
            <select class="form-select" id="pageSelector" asp-items="Model.GetPageSizes();"
                    onchange="ChangePageSize(this);">
            </select>
        </span>
    </div>



    <div class="col-4 btn-group justify-content-end mt-2">
        <p>
            Đang hiển thị @Model.CurrentPage / @Model.TotalPages trang
        </p>
    </div>


</div>

<script>
    function ChangePageSize(obj) {
        var controllerName = '@this.ViewContext.RouteData.Values["controller"].ToString()';
        window.location.href = "/admin/" + controllerName + "/@Model.Action" + "?pageSize=" + obj.value + "&SearchText=" + "@ViewBag.SearchText" + "&sortExpression=" + "@Model.SortExpression";
    }
</script>
