@model QL_BanGiay.Data.DongSanPham;
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="edit" asp-route-id="@Model.MaDongSanPham" onsubmit="return jQueryAjaxPost(this);">
