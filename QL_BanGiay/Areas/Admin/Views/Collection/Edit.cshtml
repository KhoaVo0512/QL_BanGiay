                <label class="control-label">Tên giày</label>
                <div class="input-group">
                    <input asp-for="TenDongSanPham" class="form-control" />
                </div>
                <span asp-validation-for="TenDongSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-4 offset-md-4 mt-4">
                    <input type="submit" value="Lưu" class="btn btn-primary btn-block px-5" />
                </div>
            </div>
        </form>
    </div>
</div>
