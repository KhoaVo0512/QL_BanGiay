@using QL_BanGiay.Areas.Admin.Models;
@model IEnumerable<QL_BanGiay.Data.DongSanPham>
@{
    ViewData["Title"] = "Quản lí dòng sản phẩm";
    SortModel sortModel = (SortModel)ViewData["sortModel"];
    PagerModel pager = ViewBag.Pager;
    int stt = 0;
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <a onclick="showInPopup('@Url.Action("create","collection",null,Context.Request.Scheme)','Thêm dòng sản phẩm mới')" class="breadcrumb float-sm-right">
                    <p class="btn btn-success">Thêm dòng sản phẩm mới</p>
                </a>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <partial name="_topBar" model="@pager" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                STT
                            </th>
                            <th>
                                <i class="@sortModel.GetColumn("NameCollection").SortIcon" arial-hidden="true"></i>
                                <a asp-action="Index" asp-route-SearchText="@ViewBag.SearchText" asp-route-sortExpression="@sortModel.GetColumn("NameCollection").SortExpression">
                                    Tên dòng sản phẩm
                                </a>
                            </th>
                            <th>
                                <i class="@sortModel.GetColumn("NameBrand").SortIcon" arial-hidden="true"></i>
                                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("NameBrand").SortExpression">
                                    Tên nhãn hiệu
                                </a>
                            </th>
                            <th>
                                Chức năng
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            stt = stt + 1;
                            <tr>
                                <td>
                                    @stt
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenDongSanPham)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaNhanHieuNavigation.TenNhanHieu)
                                </td>
                                <td>
                                    <a onclick="showInPopup('@Url.Action("edit", "collection",new {id = item.MaDongSanPham},Context.Request.Scheme)','Chỉnh sửa dòng sản phẩm')" class="btn btn-success text-white"><i class="fa-regular fa-pen-to-square"></i></a>
                                    @if ((await AuthorizationService.AuthorizeAsync(User, "Admin")).Succeeded)
                                    {
                                        <a onclick="showInPopup('@Url.Action("delete", "collection",new {id = item.MaDongSanPham},Context.Request.Scheme)','Xóa dòng sản phẩm')" class="btn btn-danger text-white"><i class="fa-regular fa-trash-can"></i></a>
                                    }
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <partial name="_bottomBar" model="@pager" />
            </div>
        </div>
    </div>
</div>