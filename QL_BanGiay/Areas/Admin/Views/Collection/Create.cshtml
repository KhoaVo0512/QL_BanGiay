@model QL_BanGiay.Data.DongSanPham;
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="create" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="single-form form-default form-border">
                <label>Nhãn hiệu</label>
                <div class="form-input">
                    <select asp-for="MaNhanHieu" class="form-select" asp-items="ViewBag.BrandList"></select>
                </div>
                <span asp-validation-for="MaNhanHieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tên giày</label>
                <div class="input-group">
                    <input asp-for="TenDongSanPham" class="form-control" />
                </div>
                <span asp-validation-for="TenDongSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-4 offset-md-4 mt-4">
                    <input type="submit" value="Lưu" class="btn btn-primary btn-block px-5" />
                </div>
            </div>
        </form>
    </div>
</div>
