@model QL_BanGiay.Models.RegisterModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js" integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4"> Đăng ký tài khoản</h1>
                                </div>
                                <form asp-action="Register">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="single-form form-default form-border">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Họ</label>
                                                <div class="form-input">
                                                    <input type="text" placeholder="Họ" asp-for="HoNguoiDung">
                                                    <i class="mdi mdi-account"></i>
                                                </div>
                                                <span asp-validation-for="HoNguoiDung" class="text-danger"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <label>Tên</label>
                                                <div class="form-input">
                                                    <input type="text" asp-for="TenNguoiDung" placeholder="Tên">
                                                    <i class="mdi mdi-account"></i>
                                                </div>
                                                <span asp-validation-for="TenNguoiDung" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="single-form form-default form-border ">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Email</label>
                                                <div class="form-input">
                                                    <input asp-for="Email" type="email" placeholder="user@email.com">
                                                    <i class="mdi mdi-email"></i>
                                                </div>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <label>Số điện thoại</label>
                                                <div class="form-input">
                                                    <input asp-for="Sdt">
                                                    <i class="mdi mdi-phone"></i>
                                                    <span asp-validation-for="Sdt" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div> 
                                    </div>
                                    <div class="single-form form-default form-border">
                                        <label>Tài khoản</label>
                                        <div class="form-input">
                                            <input asp-for="Username">
                                            <i class="mdi mdi-map-marker"></i>
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="single-form form-default form-border ">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <label>Mật khẩu</label>
                                                <div class="form-input">
                                                    <input asp-for="Password" id="pswrd" type="password" placeholder="Password">
                                                    <i class="mdi mdi-lock"></i>
                                                    <span id="toggleBtn" toggle="#password-5" class="mdi mdi-eye-outline toggle-password"></span>
                                                </div>
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <label>Nhập lại mật khẩu</label>
                                                <div class="form-input">
                                                    <input asp-for="PasswordConfirm" type="password" id="pwcf">
                                                    <i class="mdi mdi-lock"></i>
                                                    <span id="toggleBtnCf" toggle="#password-5" class="mdi mdi-eye-outline toggle-password"></span>
                                                </div>
                                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="single-form form-default form-border">
                                        <label>Địa chỉ</label>
                                        <div class="form-input">
                                            <input asp-for="DiaChi">
                                            <i class="mdi mdi-map-marker"></i>
                                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                                        </div>                             
                                    </div>
                                 
                                    <div class="single-form form-default form-border">
                                        <div class="row">                             
                                            <div class="form-input col-sm-4">
                                                <label>Tỉnh</label>
                                                <select asp-for="MaTinh" class="form-select" id="Tinh">
                                                    <option value="" label="----Chọn----"></option>
                                                </select>
                                                <span asp-validation-for="MaTinh" class="text-danger"></span>
                                            </div>
                                            <div class="form-input col-sm-4">
                                                <label>Huyện</label>
                                                <select asp-for="MaHuyen" class="form-select" id="Huyen">
                                                    <option value="">----Chọn----</option>
                                                </select>
                                                <span asp-validation-for="MaHuyen" class="text-danger"></span>
                                            </div> 
                                            <div class="form-input col-sm-4">
                                                <label>Xã</label>
                                                <select asp-for="MaXa" class="form-select" id="Xa">
                                                    <option value="">----Chọn----</option>
                                                </select>
                                                <span asp-validation-for="MaXa" class="text-danger"></span>
                                            </div>
                                        </div>                           
                                    </div>                                  
                                    <div class="single-form text-center">
                                        <button type="submit" class="main-btn primary-btn">Đăng ký</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
<script src="~/js/Register.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
