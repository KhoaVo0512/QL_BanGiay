@model QL_BanGiay.Areas.Admin.Models.PagerModel

<style>
    .page-link {
        color: black !important;
    }

    .page-item.active .page-link {
        z-index: 3;
        color: #fff;
        background-color: aqua !important;
        border-color: aqua;
    }
</style>
<div class="container btn-group">
    <div class="container mt-1">

        <ul class="pagination">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="@Model.Action"
                   asp-route-pg="1"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-SearchText="@ViewBag.SearchText"
                   asp-route-sortExpression="@Model.SortExpression">
                        Đầu
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="@Model.Action"
                   asp-route-pg="@(Model.CurrentPage-1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-SearchText="@ViewBag.SearchText"
                   asp-route-sortExpression="@Model.SortExpression">
                        Trước
                    </a>
                </li>
            }



            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge==Model.CurrentPage ?"active" : "")">
                    @if (pge != Model.CurrentPage)
                    {
                        <a class="page-link" asp-action="@Model.Action"
                   asp-route-pg="@pge"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-SearchText="@ViewBag.SearchText"
                   asp-route-sortExpression="@Model.SortExpression">
                            @pge
                        </a>
                    }
                    else
                    {
                        <span class="page-link">@pge</span>
                    }
                </li>

            }



            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="@Model.Action"
                   asp-route-pg="@(Model.CurrentPage+1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-SearchText="@ViewBag.SearchText"
                   asp-route-sortExpression="@Model.SortExpression">
                        Tiếp
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="@Model.Action"
                   asp-route-pg="@(Model.TotalPages)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-SearchText="@ViewBag.SearchText"
                   asp-route-sortExpression="@Model.SortExpression">
                        Cuối
                    </a>
                </li>
            }
        </ul>
    </div>

</div>