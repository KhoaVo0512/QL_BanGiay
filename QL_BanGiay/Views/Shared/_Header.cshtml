<script type="text/template" id="cartT">
      <% _.each(items, function (item) { %>
           <tr>
                                                        <td class="checkout-product">
                                                            <div class="product-cart d-flex">
                                                                <div class="product-thumb">
                                                                    <img src="<%= item.image %>"
                                                                         alt="Product">
                                                                </div>
                                                                <div class="product-content media-body">
                                                                    <h5 class="title" style="font-size: 15px;">
                                                                        <a href="<%= item.name %>"><%= item.name %></a>
                                                                    </h5>
                                                                    <ul>
                                                                        <li><span style="font-size: 12px;"><%= item.size %></span></li>
                                                                    </ul> 
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>x<%= item.count %></td>
                                                        <td class="checkout-price">
                                                            <p class="price"><%= item.price %></p>
                                                        </td>
                                                        <td><a class="delete" href="javascript:void(0)" onclick="storage.removeCart('<%= item.id %>', <%= item.idsize %>);">
                                                                                <i style="color: red;" class="fa-solid fa-trash-can"></i>
                                                                            </a></td>
                                                    </tr>
    <% }); %>
</script>
